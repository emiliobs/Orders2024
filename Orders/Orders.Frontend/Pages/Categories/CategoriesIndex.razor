@page "/categories"

<h3>Categoría</h3>
<hr />

<div class="mb-3">
    <a class="btn btn-primary" href="/categories/create">Nueva Categoría.</a>
</div>

<GenericList MyList="Categories">
   <Body>
        <table class="table table-hover table-striped table-bordered table-info">
            <thead>
                <tr>
                    <th>País</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Categories)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>
                            <a href="/countries/edit/@category.Id" class="btn btn-warning">Editar</a>
                            <button @onclick=@(() => DeleteAsync(category)) class="btn btn-danger">Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>




