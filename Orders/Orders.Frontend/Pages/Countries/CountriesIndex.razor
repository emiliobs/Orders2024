@page "/countries"

<h3>Paises</h3>
<hr />

<div class="mb-3">
    <a class="btn btn-primary" href="/countries/create">Nuevo País.</a>
</div>

<GenericList MyList="Countries">
    @* <Loading>
        <p>Cargando.....</p>
    </Loading> *@
    <Body>
        <table class="table table-hover table-striped table-bordered table-info">
            <thead>
                <tr>
                    <th>País</th>
                    <th>Departamentos / Estados</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in Countries)
                {
                    <tr>
                        <td>@country.Name</td>
                        <td>@country.StateNumber</td>
                        <td>
                            <a href="/countries/edit/@country.Id" class="btn btn-warning">Editar</a>
                            <a href="/countries/details/@country.Id" class="btn btn-info">Details</a>
                            <button @onclick=@(() => DeleteAsync(country)) class="btn btn-danger">Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>




